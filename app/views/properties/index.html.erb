<p id="notice"><%= notice %></p>

<h1>Listing Properties</h1>

<table>
<% @properties.each do |property| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(property.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= property.address %></dt>
        <dd><%= truncate(strip_tags(property.description), length: 160) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', property %><br/>
      <%= link_to 'Edit', property %><br/>
      <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
