<p id="notice"><%= notice %></p>

<%= render :partial => @blog %>


<div class="content">
  <div class="large-9 columns" role="content">
    <h2>Comments</h2>
    <div id="comments">
      <%= render :partial => @blog.comments %>
    
      <%= form_for [@blog, Comment.new] do |f| %>
        <p>
          <%= f.label :body, "New Comment" %></br>
          <%= f.text_area :body %>
        </p>
        <p><%= f.submit "Add comment" %></p>
      <% end %>    

<%= link_to 'Back', blogs_path, class: 'button tiny radius' %>
<%= link_to 'Edit', edit_blog_path(@blog), class: 'button tiny radius' %>


    </div>
  </div>
</div>

